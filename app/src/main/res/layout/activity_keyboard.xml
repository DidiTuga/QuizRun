<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeyboardActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="732dp"
        android:layout_height="414dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/Txt_texto"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/softblue" />

        <EditText
            android:id="@+id/Edt_Nome"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:hint="@string/Str_nome"
            android:opacity="transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/Edt_Curso"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_background"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:hint="@string/Str_curso"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/Edt_Naluno"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_background"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:hint="@string/Str_Naluno"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Btn_submeter"
            android:layout_width="205dp"
            android:layout_height="66dp"
            android:padding="11dp"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:layout_margin="5dp"
            android:text="@string/Str_submeter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>